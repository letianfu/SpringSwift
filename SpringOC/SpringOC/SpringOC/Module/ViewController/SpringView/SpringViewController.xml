<!--
 
 offsetTo="left:{id:super,equal:10},top:{id:super,equal:10}"
 offsetTo:上下左右边距
 left:左边距 id:相对的view equal:像素值
 
 -->
<View
    id="contentView"
    backgroundColor="255,255,255"
    offsetTo="left:{id:super,equal:0},right:{id:super,equal:0},top:{id:super,equal:0},bottom:{id:super,equal:0}">

    <Button
        id="subView"
        width="100"
        height="100"
        centerInSuper="true"
        style="btnClz"
        ></Button>
    
    <Label
        id="view2"
        offsetTo="left:{id:super,equal:100},top:{id:super,equal:100}"
        text="付乐天"
        backgroundColor="255,204,153"
        ></Label>
    
    <ImageView id="imgTest" width="100" height="100" backgroundColor="255,0,0" offsetTo="bottom:{id:super,equal:10},left:{id:super,equal:10}"
        src="ic_3.png"
        ></ImageView>

</View>
